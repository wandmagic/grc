{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SBOM Attestation Node",
  "description": "A node representing a Software Bill of Materials (SBOM) attestation in a GRC model",
  "type": "object",
  "allOf": [
    {
      "$ref": "../node.schema.json#/definitions/node"
    },
    {
      "properties": {
        "type": {
          "const": "sbom-attestation"
        },
        "name": {
          "type": "string",
          "description": "Name of the SBOM attestation"
        },
        "description": {
          "type": "string",
          "description": "Description of the SBOM attestation"
        },
        "format": {
          "type": "string",
          "description": "Format of the SBOM (e.g., CycloneDX, SPDX, SWID)",
          "enum": ["CycloneDX", "SPDX", "SWID", "Other"]
        },
        "version": {
          "type": "string",
          "description": "Version of the SBOM"
        },
        "creationDate": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when the SBOM was created"
        },
        "author": {
          "type": "string",
          "description": "Author of the SBOM"
        },
        "verificationStatus": {
          "type": "string",
          "description": "Verification status of the SBOM",
          "enum": ["verified", "unverified", "in-progress"]
        },
        "documentLocation": {
          "type": "string",
          "description": "Location or URI of the SBOM document"
        }
      },
      "required": ["name", "format"]
    }
  ],
  "$id": "sbom-attestation.schema.json"
}
